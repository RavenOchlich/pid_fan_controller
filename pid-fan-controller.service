[Unit]
Description=PID fan controller
After=lm_sensors.service
Requires=lm_sensors.service
After=basic.target
Requires=basic.target

[Service]
Type=simple
ExecStartPre=/usr/share/pid-fan-controller/set_fan_control_mode.sh 0
ExecStart=/usr/share/pid-fan-controller/pid_fan_controller.py
ExecStopPost=/usr/share/pid-fan-controller/set_fan_control_mode.sh 1

[Install]
WantedBy=multi-user.target

